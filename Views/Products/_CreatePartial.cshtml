@using ASWebEssentials.Models.ProductModels;
@model Product;


<form asp-controller="Products" asp-action="Create" method="post">
    <div class="border p-3 mt-5 bg-light w-75 mx-auto">
        <div class="row pb-2">
            <h2 class="text-black">Add new Product</h2>
            <hr />
        </div>
        <div class="d-flex justify-content-end">
            <a asp-controller="AdminDash" asp-action="index" class="btnClass5 btn-sm">
                Back to AdminDashBoard <i class="fa fa-angle-double-right"></i>
            </a>
        </div>
        <div class="mb-3 text-dark">
            <label asp-for="ProdName">Product Name</label>
            <input asp-for="ProdName" class="form-control" />
            <span asp-validation-for="ProdName" class="text-danger"></span>
        </div>
        <div class="mb-3 text-dark">
            <label asp-for="ShortDesc">Short Description</label>
            <textarea asp-for="ShortDesc" class="form-control" style="height:100px"></textarea>
            <span asp-validation-for="ShortDesc" class="text-danger"></span>
        </div>
        <div class="mb-3 text-dark">
            <label asp-for="DetailDesc">Detail Description</label>
            <textarea asp-for="DetailDesc" class="form-control" style="height:150px"></textarea>
            <span asp-validation-for="DetailDesc" class="text-danger"></span>
        </div>
        <div class="mb-3 text-dark">
            <label asp-for="ImageUrl">Image Url:</label>
            <input asp-for="ImageUrl" class="form-control">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        @* Features *@
        <div class="mb-3 text-dark">
            <div class="input-group mb-3">
                <div class="w-100">
                    <label asp-for="Features![0]">Feature 1:</label>
                    <input class="form-control" asp-for="Features![0]" />
                </div>
                <div class="w-100">
                    <label asp-for="Features![1]">Feature 2:</label>
                    <input class="form-control" asp-for="Features![1]" />
                </div>
                <div class="w-100">
                    <label asp-for="Features![2]">Feature 3:</label>
                    <input class="form-control" asp-for="Features![2]" />
                </div>
            </div>
        </div>

        @* Options *@
        <div class="mb-3 text-dark">
            <div class="row pb-2">
                <h4 class="text-black">Product Option1</h4>
                <hr />
            </div>
            <div class="input-group mb-3">
                <div class="w-100">
                    <label asp-for="Options![0].OptionName">Option Name:</label>
                    <input class="form-control" asp-for="Options![0].OptionName" />
                </div>
                <div class="w-100">
                    <label asp-for="Options![0].OptDesc">Option description:</label>
                    <textarea asp-for="Options![0].OptDesc" class="form-control" style="height:100px"></textarea>
                </div>
                <div class="w-100">
                    <label asp-for="Options![0].ImageUrl">Image Url:</label>
                    <input asp-for="Options![0].ImageUrl" class="form-control">
                    <span asp-validation-for="Options![0].ImageUrl" class="text-danger"></span>
                </div>
                <div class="w-100">
                    <label asp-for="Options![0].Price">Option Price:</label>
                    <input type="number" class="form-control" asp-for="Options![0].Price" />
                </div>
            </div>
        </div>

        @* Category *@
        <div class="mb-3 text-dark">
            <div class="row pb-2">
                <h4 class="text-black">The category to which the product belongs</h4>
                <hr />
                <div>
                    @* Show Categories Name *@
                </div>
            </div>
            <div class="input-group mb-3">
                <div class="w-100">
                    <label>Select Categories:</label>
                    <select asp-for="Categories" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "CatName"))" multiple></select>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-warning" style="width:100px">Create</button>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
