@model List<ASWebEssentials.Models.Feature>

<section id="services" class="Con4 py-5">

    <h2 class="HeadingH2">Features</h2>
    <div class="FeatCon">
        @for (int i = 0; i < Model.Count && i < 4; i++)
        {
            <div class="FeatItem">
                <div class="icon">
                    <p class="circleClass @("circolor" + (i + 1))"></p>
                </div>
              
                <h4>@Model[i].Name</h4>
                <p>@Model[i].Description</p>

            </div>    
        }
    </div>

    <a class="btnClass2" href="@Url.Action("Index", "About")">More about our features</a>
</section>